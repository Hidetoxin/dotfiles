# vim: syntax=toml

[toplevel]
creds =
  !f() {
    cd ~/.config/aws && ln -nsf config-${1} config
  }; f
whoami = get-caller-identity

[command ec2]
list-sgs = describe-security-groups --query "SecurityGroups[].[GroupId, GroupName]" --output text
instance-profiles = !aws iam list-instance-profiles
