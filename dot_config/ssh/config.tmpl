# vim: syntax=sshconfig

Host mbam1.github.com
    User                     git
    Hostname                 github.com
    IdentityFile             ~/.config/ssh/id_github_mbam1
    IdentitiesOnly           yes
    PreferredAuthentications publickey
{- end }}

