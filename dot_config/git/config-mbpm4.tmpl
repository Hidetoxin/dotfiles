# vim: syntax=gitconfig

{{- if (eq .chezmoi.hostname "mbpm4") }}
[user]
    name    = "{{ (bitwarden "item" .bw.mbpm4.id).identity.firstName }} {{ (bitwarden "item" .bw.mbpm4.id).identity.middleName }}"
    email   = "{{ (bitwarden "item" .bw.mbpm4.id).identity.email }}"
    signkey = "{{ (bitwardenFields "item" .bw.mbpm4.gpg).Id.value }}"

[commit]
    gpgsign = true

[github]
    user = "{{ (bitwarden "item" .bw.mbpm4.id).identity.username }}"

[url "ssh://git@mbpm4.github.com/"]
	insteadOf = "https://github.com/"
[url "ssh://git@mbpm4.github.com/"]
	insteadOf = "ssh://git@github.com/"

[url "ssh://git@mbpm4gitlab.com/"]
	insteadOf = "https://gitlab.com/"
[url "ssh://git@mbpm4.gitlab.com/"]
	insteadOf = "ssh://git@gitlab.com/"

[url "ssh://git@mbpm4.bitbucket.org/"]
	insteadOf = "https://bitbucket.org/"
[url "ssh://git@mbpm4.bitbucket.org/"]
	insteadOf = "ssh://git@bitbucket.org/"

[url "ssh://git@mbpm4.codeberg.org/"]
	insteadOf = "https://codeberg.org/"
[url "ssh://git@mbpm4.codeberg.org/"]
	insteadOf = "ssh://git@codeberg.org/"
{{- end }}
