# vim: syntax=gitconfig

[ghq]
    root = "~/Code"

[gpg]
    program = "gpg2"

[tag]
    sort = "-version:refname"

[core]
    pager       = "delta"
    editor      = "nvim"
    whitespace  = "trailing-space,space-before-tab,space-in-empty-line,indent-with-non-tab"
    compression = 9

[diff]
    algorithm = "histogram"

[pull]
    rebase = true

[push]
    autoSetupRemote = true

[alias]
  l      = "log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
  graph  = "log --all --graph --decorate --oneline"
  ignore = "!gi() { local IFS=','; curl -sL https://www.toptal.com/developers/gitignore/api/\"$*\"; }; gi"

[delta]
    features               = "side-by-side line-numbers decorations"
    syntax-theme           = "gruvbox-dark"
    whitespace-error-style = "22 reverse"

[branch]
    sort = "-committerdate"

[column]
    ui = "auto"

[commit]
    verbose = true

[maintenance]
    auto     = true
    strategy = "incremental"

[includeIf "gitdir:~/.local/share/chezmoi/"]
    path = "~/.config/git/config-mbam1"

[ingludeIf "gitdir:~/Code/mbam1.github.com/"]
    path = "~/.config/git/config-mbam1"

{{ if (eq .chezmoi.hostname "mbpm4p") }}
[includeIf "gitdir:~/Code/mbpm4p.github.com/"]
    path = "~/.config/git/config-mbpm4p"
{{ end }}

{{ if (eq .chezmoi.hostname "mbpm4m") }}
[includeIf "gitdir:~/Code/mbpm4m.github.com/"]
    path = "~/.config/git/config-mbpm4m"
{{ end }}
